<p id="notice"><%= notice %></p>

<% if @message %>
  <div class="center alert">
    <p><%= @message %></p>
  </div>
<% end %>
<% if session[:user_id] %>
  <% @user = User.find(session[:user_id])%>
  <h1><%= @user.name %></h1>
  <% if @user.admin %>
    <h2>Administrator</h2>
  <% end %>
  <h2><%= @user.email %></h2>

  <img src="<%= @user.image %>"
<% else %>
  <%= link_to('Log in with Google', '/auth/google_oauth2')%>
<% end %>

<h3>What would you like to do?</h3>

<%= link_to('See lists of all subjects taught by you', user_subjects_path(@user))  %>
