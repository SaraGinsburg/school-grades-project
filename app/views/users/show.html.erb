<p id="notice"><%= notice %></p>

<% if @message %>
  <div class="center alert">
    <p><%= @message %></p>
  </div>
<% end %>

<div class="center">

  <div class="info">
    <% if @user.admin %>
      <p><strong>TEACHER</strong></p>
    <% end %>
    <p><strong>Name:</strong> <%= @user.name %></p>

    <p><%= link_to 'Add a new assignment', new_user_assignment_path(@user)%></p><br><br><br>
    <p><%= link_to "See all user's assignments", user_assignments_path(@user) %></p><br><br><br>
    <p><%= link_to 'Edit', edit_user_path(@user) %></p>
  </div>
</div>
